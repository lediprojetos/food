<%if notice %>
  <div class="alert alert-success alert-dismissible fade in" role="alert">
    <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
     <%= notice %>
</div>
<%end%>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Exibir Categoria</h3>
  </div>
  <div class="panel-footer" style="background-color:white;">

<p>
  <strong>Categoria:</strong>
  <%= @fd_categoriaproduto.desc_categoria %>
</p>

<p>
  <strong>Father:</strong>
  <%= @fd_categoriaproduto.father_id %>
</p>
	</div>
</div>

<div class="btn-group">          
  <%= link_to edit_fd_categoriaproduto_path(@fd_categoriaproduto), :class => "btn btn-default btn-sm" do %>
    <span class="glyphicon glyphicon-pencil"></span> Editar
  <% end %>
  <%= link_to fd_categoriaprodutos_path, :class => "btn btn-default btn-sm" do %>
    <span class="glyphicon glyphicon-arrow-left"></span> Voltar
  <% end %>       
</div>