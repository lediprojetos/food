<%if notice %>
  <div class="alert alert-success alert-dismissible fade in" role="alert">
    <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
     <%= notice %>
</div>
<%end%>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Exibir Cargo</h3>
  </div>
  <div class="panel-footer" style="background-color:white;">


<p>
  <strong>Nome cargo:</strong>
  <%= @fd_cargo.nome_cargo %>
</p>

<p>
  <strong>Descrição cargo:</strong>
  <%= @fd_cargo.desc_cargo %>
</p>

  </div>
</div>
<hr/>

<div class="btn-group">          
  <%= link_to edit_fd_cargo_path(@fd_cargo), :class => "btn btn-default btn-sm" do %>
    <span class="glyphicon glyphicon-pencil"></span> Editar
  <% end %>
  <%= link_to fd_cargos_path, :class => "btn btn-default btn-sm" do %>
    <span class="glyphicon glyphicon-arrow-left"></span> Voltar
  <% end %>       
</div>


