<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading"><h3 class="panel-title">Listar Usu√°rios</h3></div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Login</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @fd_usuarios.each do |fd_usuario| %>
      <tr>
        <td><%= fd_usuario.desc_nome %></td>
        <td><%= fd_usuario.desc_login %></td>
          <td align='right'>
            <div class="btn-group">
              <%= link_to fd_usuario, :class => "btn btn-default btn-sm" do %>
                <span class="glyphicon glyphicon-list-alt"></span> Exibir
              <% end %>             
              <%= link_to edit_fd_usuario_path(fd_usuario), :class => "btn btn-default btn-sm" do %>
                <span class="glyphicon glyphicon-pencil"></span> Editar
              <% end %>             
              <%= link_to fd_usuario , :method => :delete,  :confirm => 'Deseja excluir o registro?', :class => "btn btn-default btn-sm" do %>
                <span class="glyphicon glyphicon-trash"></span> Excluir
              <% end %>            
            </div>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<%= link_to new_fd_usuario_path, :class => "btn btn-default btn-sm" do %>
   <span class="glyphicon glyphicon-file"></span>Novo
<% end %>