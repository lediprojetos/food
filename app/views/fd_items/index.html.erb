<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading"><h3 class="panel-title">Listar Itens</h3></div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Descrição</th>
      <th>Exclusão</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @fd_items.each do |fd_item| %>
      <tr>
        <td><%= fd_item.desc_item %></td>
        <td><%= fd_item.data_exclusao %></td>
          <td align='right'>
            <div class="btn-group">
              <%= link_to fd_item, :class => "btn btn-default btn-sm" do %>
                <span class="glyphicon glyphicon-list-alt"></span> Exibir
              <% end %>             
              <%= link_to edit_fd_item_path(fd_item), :class => "btn btn-default btn-sm" do %>
                <span class="glyphicon glyphicon-pencil"></span> Editar
              <% end %>             
              <%= link_to fd_item , :method => :delete,  :confirm => 'Deseja excluir o registro?', :class => "btn btn-default btn-sm" do %>
                <span class="glyphicon glyphicon-trash"></span> Excluir
              <% end %>            
            </div>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<%= link_to new_fd_item_path, :class => "btn btn-default btn-sm" do %>
   <span class="glyphicon glyphicon-file"></span>Novo
<% end %>
