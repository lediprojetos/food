<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading"><h3 class="panel-title">Listar Pedidos</h3></div>

    <table class="table table-hover">
      <thead>
        <tr>
          <th>Valor</th>
          <th>Mesa</th>
          <th>Pagamento</th>
          <th>Situação</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @fd_pedidos.each do |fd_pedido| %>
          <tr>
            <td><%= fd_pedido.valr_pedido %></td>
            <td><%= fd_pedido.fd_mesa.numr_mesa %></td>
            <td><%= fd_pedido.fd_formapagamento %></td>
            <td><%= fd_pedido.fd_situacao.nome_situacao %></td>
            <td align="right">
              <div class="btn-group">
                <%= link_to fd_pedido, :class => "btn btn-default btn-sm" do %>
                  <span class="glyphicon glyphicon-list-alt"></span> Exibir
                <% end %>             
                <%= link_to edit_fd_pedido_path(fd_pedido), :class => "btn btn-default btn-sm" do %>
                  <span class="glyphicon glyphicon-pencil"></span> Editar
                <% end %>             
                <%= link_to fd_pedido , :method => :delete,  :confirm => 'Deseja excluir o registro?', :class => "btn btn-default btn-sm" do %>
                  <span class="glyphicon glyphicon-trash"></span> Excluir
                <% end %>            
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

</div>

  <%= link_to new_fd_pedido_path, :class => "btn btn-default btn-sm" do %>
     <span class="glyphicon glyphicon-file"></span>Novo
  <% end %>
