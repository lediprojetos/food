<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading"><h3 class="panel-title">Listar Usuários</h3></div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Variação</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @fd_variacaos.each do |fd_variacao| %>
      <tr>
        <td><%= fd_variacao.desc_variacao %></td>
          <td align='right'>
            <div class="btn-group">
              <%= link_to fd_variacao, :class => "btn btn-default btn-sm" do %>
                <span class="glyphicon glyphicon-list-alt"></span> Exibir
              <% end %>             
              <%= link_to edit_fd_variacao_path(fd_variacao), :class => "btn btn-default btn-sm" do %>
                <span class="glyphicon glyphicon-pencil"></span> Editar
              <% end %>             
              <%= link_to fd_variacao , :method => :delete,  :confirm => 'Deseja excluir o registro?', :class => "btn btn-default btn-sm" do %>
                <span class="glyphicon glyphicon-trash"></span> Excluir
              <% end %>            
            </div>
          </td>

      </tr>
    <% end %>
  </tbody>
</table>

</div>

<%= link_to new_fd_variacao_path, :class => "btn btn-default btn-sm" do %>
   <span class="glyphicon glyphicon-file"></span>Novo
<% end %>

<br>