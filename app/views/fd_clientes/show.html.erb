<%if notice %>
  <div class="alert alert-success alert-dismissible fade in" role="alert">
    <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
     <%= notice %>
</div>
<%end%>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Exibir Cliente</h3>
  </div>
  <div class="panel-footer" style="background-color:white;">

    <p>
      <strong>Nome cliente:</strong>
      <%= @fd_cliente.nome_cliente %>
    </p>

    <p>
      <strong>Sexo:</strong>
      <%= @fd_cliente.desc_sexo %>
    </p>

    <p>
      <strong>Celular:</strong>
      <%= @fd_cliente.desc_celular %>
    </p>

    <p>
      <strong>Telefone:</strong>
      <%= @fd_cliente.desc_telefone %>
    </p>

    <p>
      <strong>E-mail:</strong>
      <%= @fd_cliente.desc_email %>
    </p>

    <p>
      <strong>CPF:</strong>
      <%= @fd_cliente.desc_cpf %>
    </p>

    <p>
      <strong>Dt. Nascimento:</strong>
      <%= @fd_cliente.data_nascimento %>
    </p>

    <p>
      <strong>Bairro:</strong>
      <%= @fd_cliente.fd_endereco.nome_bairro %>
    </p>

    <p>
      <strong>Rua:</strong>
      <%= @fd_cliente.fd_endereco.nome_rua %>
    </p>

    <p>
      <strong>Quadra:</strong>
      <%= @fd_cliente.fd_endereco.numr_quadra %>
    </p>

    <p>
      <strong>Complemento:</strong>
      <%= @fd_cliente.fd_endereco.desc_complemento %>
    </p>

    <p>
      <strong>Ponto Referencia:</strong>
      <%= @fd_cliente.fd_endereco.desc_pontoreferencia %>
    </p>

    <p>
      <strong>Estado:</strong>
      <%= @fd_cliente.fd_endereco.fd_cidade.fd_estado.nome_estado %>
    </p>

    <p>
      <strong>Estado:</strong>
      <%= @fd_cliente.fd_endereco.fd_cidade.nome_cidade %>
    </p>
  </div>
</div>

<div class="btn-group">          
  <%= link_to edit_fd_cliente_path(@fd_cliente), :class => "btn btn-default btn-sm" do %>
    <span class="glyphicon glyphicon-pencil"></span> Editar
  <% end %>
  <%= link_to fd_clientes_path, :class => "btn btn-default btn-sm" do %>
    <span class="glyphicon glyphicon-arrow-left"></span> Voltar
  <% end %>       
</div>