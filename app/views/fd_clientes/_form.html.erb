  <div class="field">
    <%= f.label :Sexo %><br>
    <%= f.collection_select :desc_sexo, FdCliente::SEXO, :to_s, :humanize, {}%>
  </div>

  <div class="field">
    <%= f.label :Telefone_celular %><br>
